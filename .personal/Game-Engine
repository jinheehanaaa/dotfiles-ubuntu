cd ~
mkdir vulkan
cd vulkan
sha256sum $HOME/Downloads/vulkansdk-linux-x86_64-1.3.239.0.tar.gz
tar xf $HOME/Downloads/vulkansdk-linux-x86_64-1.3.239.0.tar.gz


cd vulkan/1.3.239.0


sudo apt install clang
clang
echo $VULKAN_SDK
